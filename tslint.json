{
  "extends": "tslint:latest",
  "linterOptions": {
    "exclude": [
      "**/node_modules/**",
      "**/coverage/**",
      "**/dist/**",
      "**/docs/**",
      "**/www/**"
    ]
  },
  "rules": {
    "no-console": [
      true,
      "log",
      "debug"
    ],
    "no-object-literal-type-assertion": false,
    "no-reference": false,
    "no-submodule-imports": [
      true
    ],
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ],
    "variable-name": [
      true,
      "allow-leading-underscore"
    ],
    "whitespace": [
      true,
      "check-branch",
      "check-decl",
      "check-operator",
      "check-module",
      "check-separator",
      "check-type"
    ]
  },
  "jsRules": {
    "object-literal-sort-keys": false,
    "quotemark": [
      true,
      "single"
    ]
  }
}